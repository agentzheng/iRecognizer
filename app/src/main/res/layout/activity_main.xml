<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elliott.a18350.irecognizer.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="130dp"
        android:background="@drawable/bg_boder"/>

    <com.elliott.a18350.irecognizer.ClearEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/edit_bg"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="386dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:context="com.elliott.a18350.irecognizer.MainActivity">

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            app:srcCompat="@drawable/camera"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#00000000"/>

        <ImageButton
            android:id="@+id/album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/image_filter"
            android:layout_marginEnd="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#00000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="horizontal"
        android:weightSum="1"

        tools:context="com.elliott.a18350.irecognizer.MainActivity">

        <ImageButton
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            app:srcCompat="@drawable/phone"
            android:background="#00000000"
            android:layout_alignTop="@+id/message"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="47dp"
            app:srcCompat="@drawable/message_text_outline"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:context="com.elliott.a18350.irecognizer.MainActivity">

        <ImageButton
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:background="#00000000"
            app:srcCompat="@drawable/content_copy"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="45dp"
            android:background="#00000000"
            app:srcCompat="@drawable/information" />

    </RelativeLayout>
</LinearLayout>
